    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'test-runner'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=test-runner",
                    "--package=test-runner"
                ],
                "filter": {
                    "name": "test-runner",
                    "kind": "bin"
                }
            },
            "args": ["-c", "./tests/config/config.json", "-d", "./tests/data_cache", "-e", "p", "-t", "n", "-l", "c"],
            "cwd": "${workspaceFolder}/test-runner"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'test-runner'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=test-runner",
                    "--package=test-runner"
                ],
                "filter": {
                    "name": "test-runner",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}